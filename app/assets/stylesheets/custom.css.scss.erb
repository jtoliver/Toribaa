/*
_______________________________
Desktop version layout - place your custom code here */

body {
	letter-spacing: 1px;
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	font-size:1em;
	color:#0a1310;
	background:#e7e4db url(<%= asset_path 'body.png' %>);
	overflow-x:hidden;

}
.bodytop {
	height:74px;
	/*background:url(<%= asset_path 'header_top.png' %>) repeat-x bottom left;*/
}

.divider_2 {
	background:url(<%= asset_path 'divider_3.png' %>);
	height:47px;
	width:100%;
	z-index:3;
	margin-top:-21px;
	opacity:.5;
}

.divider {
	background:url(<%= asset_path 'divider_3.png' %>);
	height:47px;
	width:100%;
	z-index:3;
	margin-top:-21px;
	position:absolute;
	opacity:.5;
}

.scroll_l {
	position:absolute;
	left:0;
	top:74px;
}

.scroll_r {
	position:absolute;
	right:0;
	top:74px;
}


a, a:visited {
	color:#e26853;
	text-decoration:none;
}
a:hover {
	color:#e7e4db;
}
p {
	font-size:.9em; 
	line-height:23px;
	color:#555;
}

p span {
	color:#e26853;
}

h1 {
	text-transform:uppercase;
	color:#333;
    font-family: 'LeagueGothicRegular';
	font-size:3.5em;
	text-shadow: 0px -1px 0px #374683;
	margin-bottom:45px;
}

h1, h2, h3, h4, .visit, span.cat, .scroll h1 {
	-webkit-mask-image: url(<%= asset_path 'mask.png' %>);
	-o-mask-image: url(<%= asset_path 'mask.png' %>);
	-moz-mask-image: url(<%= asset_path 'mask.png' %>);
	mask-image: url(<%= asset_path 'mask.png' %>);
}

.home, .about, .process, .portfolio, .contact {
	min-height:650px;
}

.scroll h1 {
	text-transform:uppercase;
	text-align:center;
	font-family: 'LeagueGothicRegular';
	font-size:2.5em;
	text-shadow: 0px -1px 0px #374683;
	margin-top:10px;
}

.scroll h1 span {
	text-transform:uppercase;
	text-align:center;
	font-family: 'avantgarde' !important;
	font-size:.3em !important;
	text-shadow: none;
	font-weight:normal;
	color:#666;
}

/* home */
.home {
	background: url(<%= asset_path 'home_bg.jpg' %>) no-repeat top left;
	height:710px;
	-webkit-box-shadow: 0px 0px 6px 0px #000000;
	-moz-box-shadow: 0px 0px 6px 0px #000000;
	box-shadow: 0px 0px 6px 0px #000000;
}
.home h1 {
    font-family: 'EdoRegular';
	font-size:8em;
	color:#e7e4db;
	border-bottom:none;
	background:none;
	opacity:0.1;
	text-shadow: 0px 0px 10px #000000;
	filter: dropshadow(color=#000000, offx=0, offy=0);
}
.home h2 {
    font-family: 'LeagueGothicRegular';
	font-size:3em;
	color:#e26853;
	text-transform:uppercase;
	margin:-70px 0 0 15px;
	text-shadow: 0px -1px 0px #131313;
	opacity:0.3;
}
.home h2 span {
	color:#e7e4db;
}

.headspace {
	height:0px;
}

/* nav */

ul.nav li {
	display:block;
	float:left;
}
ul.nav li a {
	display:block;
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	text-align:center;
	background:#fff url(<%= asset_path 'navbg.jpg' %>);
	color:#e7e4db;
	letter-spacing: 1px;
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	text-decoration:none;
	padding:10px 10px;
	width:120px;
	font-size:25px;
}
ul.nav li a:hover {
	background:#0a1310;
}

/* about */
 
.about a:hover {
	text-decoration:none;
	background:#333 !important;
}

.about h4 {
    font-family: 'LeagueGothicRegular';
	font-size:1.9em;
	color:#e26853;
	text-transform:uppercase;
	letter-spacing:1px;
	line-height:40px;
	font-weight:normal;
	border: 1px solid #ebd7cc;
	background: url(<%= asset_path 'h4bg.png' %>);
	padding: 5px 10px;
}

.about ul li {
	list-style-type:none;
	font-family: 'avantgarde';
	text-transform:uppercase;
	color:#666;
}

.blog {
	font-family: 'avantgarde';
	font-size:19px;
	text-transform:uppercase;
	letter-spacing:1px;
	color:#333;
	margin: 0 0 25px 0;
	padding: 0 0 10px 0;
	border-bottom:1px dotted #ccc;
}

p.blogp {
	font-size:.8em;
	letter-spacing:0;
}

.blog span {
	color:#888;
	font-size:10px;
	margin: -9px 0 0 0;
	float:left;
}

a.tweet_avatar img {
	float:left;
	margin:10px;
}

.tweet_text, .tweet_time, .tweet_join {
	font-size:.8em;
	line-height:1px;
}

/* portfolio */

.portfolio {
	background:#0a1310 url(<%= asset_path 'port_bg.jpg' %>);
	padding-bottom:30px;	
}

.portfolio h1 {
	color:#e7e4db;
	text-shadow: 0px -1px 0px #333;
	-webkit-mask-image: url(<%= asset_path 'mask.png' %>);
	-o-mask-image: url(<%= asset_path 'mask.png' %>);
	-moz-mask-image: url(<%= asset_path 'mask.png' %>);
	mask-image: url(<%= asset_path 'mask.png' %>);
}

.portfolio p {
	color:#e7e4db;
}

.portentry {
	padding: 20px 0 4px 0;
	margin-bottom:25px;
}

.portfolio img {
	-webkit-box-shadow: 0px 0px 3px 0px #000000;
	-moz-box-shadow: 0px 0px 3px 0px #000000;
	box-shadow: 0px 0px 3px 0px #000000;
	margin-right:10px;
	position:relative;	
}

.img_overlay {
	background:url(<%= asset_path 'portfolio_overlay.png' %>);
	width:300px;
	height:200px;
	position:absolute;
	z-index:3;
}

.portfolio h2 {
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	font-size:1.9em;
	color:#333;
	margin-top:0px;
	line-height:31px;
}

div.cat {
	font-family: 'avantgarde';
	font-size:15px;
	color:#e26853;
	text-transform:uppercase;
	float:left;
	text-align:center;
	position:absolute; 
	z-index:6;
	width:300px;
	margin:4px 0 0 0;
	text-shadow: 1px 1px 000000, -1px -1px #000000;
	filter: dropshadow(color=#000000, offx=0, offy=0);
}

a.visit {
	background:#333;
	padding:11px 20px 8px 20px;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	font-size:20px;
	text-decoration:none;
}

a:hover.visit {
	-webkit-box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
	-moz-box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
	box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
}

.controls {
	z-index:3;
	float:left;
	position:relative;
	margin-bottom:10px;
}

p.orange {
	color:#e26853;
}

/* contact */


ul.contactlinks li a {
	display:inline;
	width:20px;
	height:20px;
	margin:0 0 10px 0;
	padding:5px 5px;
	text-decoration:none;
	float:left;
}

ul.contactlinks li a:hover {
	background:none !important;
}

/* footer */
.footer {
	background:#0a1310 url(<%= asset_path 'subfooterbg.png' %>);
	color:#e7e4db;
	padding:20px 0 40px 0;
}
.footer h3{
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	color:#e7e4db;
	font-size:30px;
	line-height:40px;
	font-weight:normal;
}

input.text {
	padding:10px !important;
	height:100px !important;
}

