/*
_______________________________
Desktop version layout - place your custom code here */

body {
	letter-spacing: 1px;
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	font-size:1em;
	color:#0a1310;
	background:#e7e4db url(<%= asset_path 'body.png' %>);

}
.bodytop {
	height:74px;
	/*background:url(<%= asset_path 'header_top.png' %>) repeat-x bottom left;*/
}

div.divider {
	background:url(<%= asset_path 'divider.png' %>);
	height:47px;
	width:1140px;
	z-index:3;
	position:relative;
	margin-top:-21px;
}

.scroll_l {
	position:absolute;
	left:0;
	top:74px;
}

.scroll_r {
	position:absolute;
	right:0;
	top:74px;
}


a, a:visited {
	color:#e26853;
	text-decoration:none;
}
a:hover {
	color:#e7e4db;
}
p {
	font-size:.9em; 
	line-height:23px;
	color:#555;
}

p span {
	color:#e26853;
}

h1 {
	text-transform:uppercase;
	color:#333;
    font-family: 'LeagueGothicRegular';
	font-size:3.5em;
	text-shadow: 0px -1px 0px #374683;
	margin-bottom:45px;
}

h1, h2, h3, h4, .visit, span.cat {
	-webkit-mask-image: url(<%= asset_path 'mask.png' %>);
	-o-mask-image: url(<%= asset_path 'mask.png' %>);
	-moz-mask-image: url(<%= asset_path 'mask.png' %>);
	mask-image: url(<%= asset_path 'mask.png' %>);
}

.home, .about, .process, .portfolio, .contact {
	min-height:650px;
}

/* home */
.home {
	background: url(<%= asset_path 'home_bg.jpg' %>) no-repeat top left;
	height:710px;
	-webkit-box-shadow: 0px 0px 6px 0px #000000;
	-moz-box-shadow: 0px 0px 6px 0px #000000;
	box-shadow: 0px 0px 6px 0px #000000;
}
.home h1 {
    font-family: 'EdoRegular';
	font-size:8em;
	color:#e7e4db;
	border-bottom:none;
	background:none;
	opacity:0.1;
	text-shadow: 0px 0px 10px #000000;
	filter: dropshadow(color=#000000, offx=0, offy=0);
}
.home h2 {
    font-family: 'LeagueGothicRegular';
	font-size:3em;
	color:#e26853;
	text-transform:uppercase;
	margin:-70px 0 0 15px;
	text-shadow: 0px -1px 0px #131313;
	opacity:0.3;
}
.home h2 span {
	color:#e7e4db;
}

.headspace {
	height:140px;
}

/* nav */

ul.nav li {
	display:block;
	float:left;
}
ul.nav li a {
	display:block;
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	text-align:center;
	background:#fff url(<%= asset_path 'navbg.jpg' %>);
	color:#e7e4db;
	letter-spacing: 1px;
	text-rendering: optimizeLegibility;
	-webkit-font-smoothing: antialiased;
	text-decoration:none;
	padding:10px 10px;
	width:120px;
	font-size:25px;
}
ul.nav li a:hover {
	background:#0a1310;
}

/* about */
 
.about a:hover {
	text-decoration:none;
	background:#333;
	padding:2px;
}

.about h4 {
    font-family: 'LeagueGothicRegular';
	font-size:1.9em;
	color:#e26853;
	text-transform:uppercase;
	letter-spacing:1px;
	line-height:40px;
}

.about ul li {
	list-style-type:none;
	font-family: 'avantgarde';
	text-transform:uppercase;
	color:#666;
}

.blog {
	font-family: 'avantgarde';
	font-size:19px;
	text-transform:uppercase;
	letter-spacing:1px;
	color:#333;
	margin: 0 0 25px 0;
	padding: 0 0 10px 0;
	border-bottom:1px dotted #ccc;
}

p.blogp {
	font-size:.8em;
	letter-spacing:0;
}

.blog span {
	color:#888;
	font-size:10px;
	margin: -9px 0 0 0;
	float:left;
}


/* portfolio */

.portfolio {
	background:#0a1310 url(<%= asset_path 'port_bg.jpg' %>);
	-webkit-box-shadow: 0px 0px 6px 0px #000000;
	-moz-box-shadow: 0px 0px 6px 0px #000000;
	padding-bottom:30px;	
}

.portfolio h1 {
	color:#e7e4db;
	text-shadow: 0px -1px 0px #333;
	-webkit-mask-image: url(<%= asset_path 'mask.png' %>);
	-o-mask-image: url(<%= asset_path 'mask.png' %>);
	-moz-mask-image: url(<%= asset_path 'mask.png' %>);
	mask-image: url(<%= asset_path 'mask.png' %>);
}

.portfolio p {
	color:#e7e4db;
}

.portentry {
	padding: 20px 0 4px 0;
}

.portfolio img {
	border:6px solid #e7e4db;
	-webkit-box-shadow: 0px 0px 3px 0px #000000;
	-moz-box-shadow: 0px 0px 3px 0px #000000;
	box-shadow: 0px 0px 3px 0px #000000;
	float:left;
	margin-right:10px;
	position:relative;	
}

.portfolio h2 {
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	font-size:1.9em;
	color:#333;
	margin-top:0px;
	line-height:31px;
}

span.cat {
	font-family: 'avantgarde';
	font-size:14px;
	color:#333;
	text-transform:uppercase;
	float:left;
	margin:-18px 0 0 18px;
	position:absolute; 
	background:#e7e4db;
	height:18px;
	padding: 0 10px 0 10px;
}

a.visit {
	background:#333;
	padding:11px 50px 8px 50px;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	font-size:20px;
	text-decoration:none;
}

a:hover.visit {
	-webkit-box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
	-moz-box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
	box-shadow: inset 0px 0px 4px 0px rgba(0, 0, 0, 1);
}

/* contact */


ul.contactlinks li a {
	display:inline;
	width:20px;
	height:20px;
	margin:0 0 10px 0;
	padding:5px 5px;
	text-decoration:none;
	float:left;
}


/* footer */
.footer {
	background:#0a1310 url(<%= asset_path 'subfooterbg.png' %>);
	color:#e7e4db;
	padding:20px 0 40px 0;
}
.footer h3{
    font-family: 'LeagueGothicRegular';
	text-transform:uppercase;
	color:#e7e4db;
	font-size:30px;
	line-height:40px
}

input.text {
	padding:10px !important;
	height:100px !important;
}

